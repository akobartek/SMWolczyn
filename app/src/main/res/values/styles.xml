<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">#402222</item>
        <item name="colorPrimaryDark">#391e1e</item>
        <item name="colorAccent">#391e1e</item>
        <item name="colorText">#391e1e</item>
        <item name="colorButtonText">#000000</item>
        <item name="colorIcons">#4e342e</item>
        <item name="colorMenuIcons">#777777</item>
        <item name="colorBackground">#FFFFFF</item>
        <item name="colorListItemBackground">#FFFFFF</item>
        <item name="logoMenu">@drawable/ic_logo_black</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen_xml</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NavigationDrawer" parent="AppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
</resources>
