<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDaysBar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="?colorBackground"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/firstDay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/guest_link_description"
        android:gravity="center"
        android:text="8.07"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="?colorText"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/secondDay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/guest_link_description"
        android:gravity="center"
        android:text="9.07"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="?colorText"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/thirdDay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/guest_link_description"
        android:gravity="center"
        android:text="10.07"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="?colorText"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/fourthDay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/guest_link_description"
        android:gravity="center"
        android:text="11.07"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="?colorText"
        tools:background="@drawable/day_selected"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/fifthDay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/guest_link_description"
        android:gravity="center"
        android:text="12.07"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="?colorText"
        tools:ignore="HardcodedText" />

</LinearLayout>
