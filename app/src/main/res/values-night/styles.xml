<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">#28292e</item>
        <item name="colorPrimaryDark">#28292e</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorText">#FFFFFF</item>
        <item name="colorButtonText">#FFFFFF</item>
        <item name="colorIcons">#FFFFFF</item>
        <item name="colorMenuIcons">#FFFFFF</item>
        <item name="colorBackground">#28292e</item>
        <item name="colorListItemBackground">#232428</item>
        <item name="colorDaySelected">#00CBFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="logoMenu">@drawable/ic_logo_white</item>
        <item name="textInputStyle">@style/Widget.SMWolczyn.TextInputLayout</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen_xml</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AppTheme.TextInputLayoutOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">#FFFFFF</item>
    </style>

    <style name="Widget.SMWolczyn" parent="@android:style/Widget" />

    <style name="Widget.SMWolczyn.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="hintTextColor">#FFFFFF</item>
        <item name="android:theme">@style/AppTheme.TextInputLayoutOverlay</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Widget.SMWolczyn.TimeHeaders">
        <item name="android:width">64dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">#00CBFF</item>
        <!--<item name="android:fontFamily"></item>-->
        <item name="hourMinTextSize">20sp</item>
    </style>
</resources>